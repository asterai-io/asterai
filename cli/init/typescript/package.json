{
  "name": "___COMPONENT___",
  "version": "0.1.0",
  "description": "",
  "author": "",
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "auth": "asterai auth",
    "gen:pkg": "mkdirp build && asterai pkg -o build/package.wasm -w build/package.wit",
    "gen:types": "jco guest-types build/package.wit -n component -o generated/",
    "compile": "tsc",
    "componentize": "jco componentize build/component.js -w build/package.wit -n component -o build/component.wasm",
    "build": "run-s gen:pkg gen:types compile componentize",
    "deploy": "asterai component push"
  },
  "devDependencies": {
    "@asterai/cli": "latest",
    "@asterai/sdk": "latest",
    "@bytecodealliance/jco": "^1.10.2",
    "@types/node": "^22.13.4",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  }
}
